#include <18F4620.h>
#include <stdlib.h>
#include <stdio.h>
#fuses XT, NOFCMEN, NOIESO, PUT, NOBROWNOUT, NOWDT
#fuses NOPBADEN, NOMCLR, STVREN, NOLVP, NODEBUG
#use delay(clock=16000000)

int contA=0, contB=0, contC=0, contD=0;
int anilloA=1, anilloB=1, anilloC=1, anilloD=1;
#int_timer0
void timer_0()
{  
   contA++;  
   contB++;
   contC++;
   contD++;
   set_timer0(0);
}

void main()
{
   setup_timer_0(RTCC_INTERNAL|rtcc_div_1);
   set_timer0(0);
   enable_interrupts(int_timer0);
   enable_interrupts(global);
   setup_oscillator(OSC_16MHZ);
   set_tris_a(0x00);
   set_tris_b(0x00);
   set_tris_c(0x00);
   set_tris_d(0x00);
   while(true)
   {      
      if(contA>=6)
      { 
    output_a(anilloA);
         anilloA=anilloA<<1;              
         contA=0;
    if(anilloA==64)
         {
            anilloA=1;
         } 
        }
      if(contB>=30)
      {
         output_b(anilloB);
         anilloB=anilloB<<1;
         contB=0;
         if(anilloB==256)
         {
            anilloB=1;
         }
       }
      if(contC>=60)
      {
     output_c(anilloC);
          anilloC=anilloC<<1;
          contC=0;
     if(anilloC==256)
          {
              anilloC=1;
          }
       }
       if(contD>=90)
       {
     output_d(anilloD);
          anilloD=anilloD<<1;
          contD=0;
     if(anilloD==256)
         {
            anilloD=1;
         }
       }    
       
   }
}

